<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="5dp"
    android:layout_margin="15dp"
    app:contentPadding="5dp"
    >


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="TextView"
            app:layout_constraintTop_toTopOf="@+id/tv_title"
            tools:text="11:05"
            android:layout_marginLeft="-44dp"
            app:layout_constraintLeft_toLeftOf="@+id/button_pack" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:src="@drawable/ma33a_icon"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/iv_cover"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@+id/iv_cover"
            app:layout_constraintTop_toBottomOf="@+id/iv_cover"
            tools:text="@string/random_title"
            app:layout_constraintLeft_toRightOf="@+id/tv_duration"
            android:layout_marginLeft="0dp" />


        <LinearLayout
            android:layout_width="328dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:baselineAligned="false"
            android:id="@+id/button_pack"
            >

            <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/ll_listen"
            android:layout_weight="1"
            android:background="@drawable/login_btn"
            android:padding="10dp"

                >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv_listen"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="@string/listen"/>

        </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_download"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:background="@drawable/register_btn"
                android:padding="10dp"
                >

                <TextView
                    android:id="@+id/registerTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/download"
                    android:textColor="@color/white"
                    android:textSize="15sp" />


            </LinearLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_download"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_marginTop="4dp"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/button_pack"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"

            />

        <TextView
            android:id="@+id/tv_pb"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pb_download"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/pb_download"
            tools:text="Download file 100%"
            android:layout_marginRight="0dp"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            />


    </android.support.constraint.ConstraintLayout>



</android.support.v7.widget.CardView>